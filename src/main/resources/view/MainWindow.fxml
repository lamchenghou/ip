<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<fx:root maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="400.0"
         type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/19.0.4"
         xmlns:fx="http://javafx.com/fxml/1">
    <!--fx:controller="dot.controllers.MainWindow">-->
    <children>
        <HBox prefHeight="45.0" prefWidth="400.0" styleClass="top-border" AnchorPane.bottomAnchor="1.5">
            <TextField fx:id="inputTextField" onAction="#handleUserInput" prefHeight="45.0" prefWidth="325.0"/>
            <Button fx:id="submitButton" layoutX="335.0" mnemonicParsing="false" onAction="#handleUserInput"
                    prefHeight="15.0" prefWidth="55.0" text="Send">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>

        <StackPane prefHeight="55.0" prefWidth="400.0" AnchorPane.bottomAnchor="45.0">
            <children>
                <Rectangle fx:id="errorRectangle" fill="red" height="80.0" opacity="0.5"
                           visible="false" width="400.0"/>
                <VBox alignment="CENTER" prefHeight="80.0" prefWidth="400.0">
                    <children>
                        <Label fx:id="errorMessage" alignment="CENTER" text="Label" textAlignment="CENTER"
                               visible="false" wrapText="true" VBox.vgrow="NEVER">
                            <font>
                                <Font name="Monospaced Bold Italic" size="12.0"/>
                            </font>
                            <padding>
                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                            </padding>
                        </Label>
                    </children>
                </VBox>
            </children>
        </StackPane>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" hvalue="1.0" prefHeight="500.0"
                    prefWidth="400.0" vbarPolicy="ALWAYS" vvalue="1.0">
            <content>
                <VBox fx:id="messageContainer" prefWidth="385.0"/>
            </content>
        </ScrollPane>
    </children>

    <padding>
        <Insets topRightBottomLeft="0.0"/>
    </padding>
</fx:root>
